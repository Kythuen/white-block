{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly", "group:allNonMajor"],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    },
    {
      "groupName": "test dependencies",
      "matchPackageNames": ["@vitest{/,}**", "jsdom", "memfs", "vitest"]
    },
    {
      "groupName": "build dependencies",
      "matchPackageNames": [
        "@rollup{/,}**",
        "@vitejs{/,}**",
        "esbuild{/,}**",
        "rollup{/,}**",
        "tsup",
        "unocss",
        "vite"
      ]
    },
    {
      "groupName": "commit dependencies",
      "matchPackageNames": [
        "@changesets/cli",
        "@commitlint{/,}**",
        "commitizen",
        "cz-conventional-changelog",
        "husky",
        "lint-staged"
      ]
    },
    {
      "groupName": "lint dependencies",
      "matchPackageNames": [
        "@eslint/js",
        "eslint{/,}**",
        "globals",
        "prettier{/,}**",
        "typescript-eslint"
      ]
    },
    {
      "groupName": "tool dependencies",
      "matchPackageNames": ["rimraf", "tsx"]
    }
  ],
  "ignoreDeps": ["@types/node", "typescript", "vue-tsc", "@iconify-json/**"]
}
